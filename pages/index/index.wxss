.book-list .book-desc ul li view {
  line-height: 0.4rem; }

.tiled-list ul li {
  width: 50%; }
.tiled-list ul img {
  width: 2.53333rem; }

.dialog .shade {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 100%;
  opacity: 0.6;
  background: #090909;
  display: block;
  z-index: 99;
  transition-duration: 0.2s;
  transition-timing-function: ease;
  -moz-transition-duration: 0.2s;
  -moz-transition-timing-function: ease;
  -webkit-transition-duration: 0.2s;
  -webkit-transition-timing-function: ease;
  -o-transition-duration: 0.2s;
  -o-transition-timing-function: ease; }

.dialog .modal {
  position: fixed;
  top: 0;
  left: 100%;
  display: block;
  z-index: 100;
  right: 0;
  /*padding-right: 4rem;*/
  transition-duration: 0.2s;
  transition-timing-function: ease;
  -moz-transition-duration: 0.2s;
  -moz-transition-timing-function: ease;
  -webkit-transition-duration: 0.2s;
  -webkit-transition-timing-function: ease;
  -o-transition-duration: 0.2s;
  -o-transition-timing-function: ease; }

.dialog .modal .modal-dialog {
  height: 100%;
  margin: 0; }

.dialog .modal .modal-dialog .modal-content {
  overflow-y: auto;
  border-radius: 0; }

.dialog .modal .modal-dialog .modal-content .modal-body {
  padding-right: 0; }

.dialog .modal .modal-dialog .modal-footer {
  text-align: center;
  display: inline-table;
  width: 100%; }

.dialog .modal .modal-dialog .modal-footer view {
  width: 50%;
  line-height: 0.8rem;
  display: inline-block; }

