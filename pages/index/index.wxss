.book-sort {
  width: 100%;
  text-align: center;
  background: #fff;
  margin-top: 0.13333rem;
  border-top: 1px solid #d9d9d9;
  border-bottom: 1px solid #d9d9d9;
  display: inline-table;
  margin-bottom: 0.13333rem; }
  .book-sort  view {
    width: 25%;
    height: 0.8rem;
    line-height: 0.8rem;
    display: inline-block; }
    .book-sort  view  view {
      display: inline-block;
      vertical-align: middle; }
  .book-sort .sys {
    display: inline-table; }
    .book-sort .sys view {
